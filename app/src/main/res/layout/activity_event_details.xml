<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#121615"
    >

    <com.edge.starringharsh.EDGE.IntroVideoSurfaceView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/ivDetails"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/edgewithtext" />

            <TextView
                android:id="@+id/tvDetailsDet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textroundborder"
                android:padding="15dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:textColor="#000000"
                android:textSize="15dp" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textroundborder"
                android:orientation="vertical"
                android:padding="15dp"
                android:textColor="#000000"
                android:textSize="15dp">

                <TextView
                    android:id="@+id/tvPdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rules And More..."
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/contactsdetails"
                    android:layout_marginTop="10dp"
                    android:background="#ECE9E8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/bDownloadPdf"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/pdf"
                        android:gravity="center"
                        android:padding="0dp"
                        android:textColor="#00000000" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textroundborder"
                android:orientation="vertical"
                android:padding="15dp"
                android:textColor="#000000"
                android:textSize="15dp">

                <TextView
                    android:id="@+id/contactsdetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacts"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/viewdetails1"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/contactsdetails"
                    android:layout_marginTop="10dp"
                    android:background="#ECE9E8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/bDetailsCall1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/phone" />

                    <ImageButton
                        android:id="@+id/bDetailsWA1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/tvDetailsCont1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:text="CONTACT"
                        android:textColor="#000000"
                        android:textSize="20dp" />


                </LinearLayout>

                <View
                    android:id="@+id/viewdetails2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#ECE9E8" />

                <LinearLayout
                    android:id="@+id/detailsll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageButton
                        android:id="@+id/bDetailsCall2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/phone" />

                    <ImageButton
                        android:id="@+id/bDetailsWA2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/whatsapp" />

                    <TextView
                        android:id="@+id/tvDetailsCont2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000000"
                        android:textSize="20dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout

                android:id="@+id/llDetailsUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/textroundborder"
                android:orientation="vertical"
                android:padding="15dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/UpcomingEvents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Round"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/viewUpcoming"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/contactsdetails"
                    android:layout_marginTop="10dp"
                    android:background="#ECE9E8" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDetailsUpcoming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="5dp"
                        android:text="10:50"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/bDetailsUpcoming"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/calender" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>